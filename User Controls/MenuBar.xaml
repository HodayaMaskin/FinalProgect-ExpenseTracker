<UserControl x:Class="WpfApp2.MenuBar"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.User_Controls"
             
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="1">
            <StackPanel Orientation="Vertical" Width="100" Height="200">
                <Button Style="{StaticResource HomeWinButton}" >Home</Button>
                <Button Style="{StaticResource HomeWinButton}">Expenses</Button>
                <Button Style="{StaticResource HomeWinButton}">Income</Button>
                <Button Style="{StaticResource HomeWinButton}">Reports</Button>
                <Button Style="{StaticResource HomeWinButton}">Statistics</Button>

            </StackPanel>
        </Label>
    </Grid>
</UserControl>
